@using DAL.ODS.Models.Products
@* Areas/Admin/Views/Products/Edit.cshtml *@
@model ProductClass
@{
    ViewData["Title"] = "Edit Product";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
    <h1 class="h2">Edit Product</h1>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="CategoryId" class="form-label">Category</label>
                            <select asp-for="CategoryId" class="form-control"
                                    asp-items="@(ViewBag.Categories as SelectList)">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">OMR</span>
                                <input asp-for="Price" class="form-control" type="number" step="0.01" min="0.01" />
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="StockQuantity" class="form-label">Stock Quantity</label>
                            <input asp-for="StockQuantity" class="form-control" type="number" min="0" />
                            <span asp-validation-for="StockQuantity" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Product Image</label>
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="mb-2">
                                    <img src="@Model.ImageUrl" style="width: 100px; height: 100px; object-fit: cover;"
                                         class="rounded border" alt="Current Image" />
                                </div>
                            }
                            <input type="file" name="imageFile" class="form-control" accept="image/*" />
                            <small class="text-muted">Upload a new image (optional)</small>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="form-check mt-4">
                                <input asp-for="IsActive" class="form-check-input" />
                                <label asp-for="IsActive" class="form-check-label"></label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Created Date</label>
                            <input asp-for="CreatedAt" class="form-control" readonly />
                        </div>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6>Product Information</h6>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-6">Product ID:</dt>
                    <dd class="col-sm-6">@Model.Id</dd>

                    <dt class="col-sm-6">Status:</dt>
                    <dd class="col-sm-6">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </dd>

                    <dt class="col-sm-6">Created:</dt>
                    <dd class="col-sm-6">@Model.CreatedAt.ToString("dd MMM yyyy HH:mm")</dd>

                    <dt class="col-sm-6">Orders:</dt>
                    <dd class="col-sm-6">
                        @if (Model.OrderItems != null && Model.OrderItems.Any())
                        {
                            <span class="badge bg-info">@Model.OrderItems.Count() orders</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No orders</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}