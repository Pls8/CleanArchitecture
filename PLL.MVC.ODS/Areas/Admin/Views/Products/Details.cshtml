@using DAL.ODS.Models.Products
@* Areas/Admin/Views/Products/Details.cshtml *@
@model ProductClass
@{
    ViewData["Title"] = "Product Details";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
    <h1 class="h2">Product Details</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" class="card-img-top"
                                     alt="@Model.Name" style="height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-secondary d-flex align-items-center justify-content-center"
                                     style="height: 200px;">
                                    <i class="bi bi-image text-white" style="font-size: 3rem;"></i>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="col-md-8">
                        <h3>@Model.Name</h3>

                        <dl class="row">
                            <dt class="col-sm-4">Price:</dt>
                            <dd class="col-sm-8">
                                <h4 class="text-primary">@Model.Price.ToString("C")</h4>
                            </dd>

                            <dt class="col-sm-4">Stock Quantity:</dt>
                            <dd class="col-sm-8">
                                @if (Model.StockQuantity > 20)
                                {
                                    <span class="badge bg-success fs-6">@Model.StockQuantity units</span>
                                }
                                else if (Model.StockQuantity > 0)
                                {
                                    <span class="badge bg-warning fs-6">@Model.StockQuantity units (Low Stock)</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger fs-6">Out of Stock</span>
                                }
                            </dd>

                            <dt class="col-sm-4">Category:</dt>
                            <dd class="col-sm-8">
                                @if (Model.Category != null)
                                {
                                    <span class="badge bg-info">@Model.Category.Name</span>
                                }
                                else
                                {
                                    <span class="text-muted">No category assigned</span>
                                }
                            </dd>

                            <dt class="col-sm-4">Status:</dt>
                            <dd class="col-sm-8">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </dd>

                            <dt class="col-sm-4">Created Date:</dt>
                            <dd class="col-sm-8">@Model.CreatedAt.ToString("dd MMM yyyy HH:mm")</dd>
                        </dl>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12">
                        <h5>Description</h5>
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <p class="text-muted">@Model.Description</p>
                        }
                        else
                        {
                            <p class="text-muted fst-italic">No description provided.</p>
                        }
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12">
                        <h5>Order History</h5>
                        @if (Model.OrderItems != null && Model.OrderItems.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Order Date</th>
                                            <th>Quantity</th>
                                            <th>Unit Price</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.OrderItems.Take(5))
                                        {
                                            <tr>
                                                <td>@(item.Order?.OrderDate.ToString("dd MMM yyyy") ?? "N/A")</td>
                                                <td>@item.Quantity</td>
                                                <td>@item.UnitPrice.ToString("C")</td>
                                                <td>@item.TotalPrice.ToString("C")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted fst-italic">No orders for this product yet.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>