@using DAL.ODS.Models.Order
@* Areas/Admin/Views/Orders/Index.cshtml *@
@model IEnumerable<OrderClass>
@{
    ViewData["Title"] = "Orders Management";
    Layout = "_AdminLayout";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Orders Management</h1>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Orders List</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="ordersTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Order Date</th>
                                    <th>Total Amount</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td>#@order.Id</td>
                                        <td>
                                            @if (order.AppUser != null)
                                            {
                                                @order.AppUser.FirstName @order.AppUser.LastName
                                            }
                                            else
                                            {
                                                <span class="text-muted">Customer</span>
                                            }
                                    </td>
                                    <td>@order.OrderDate.ToString("dd MMM yyyy HH:mm")</td>
                                    <td>@order.TotalAmount.ToString("C")</td>
                                    <td>
                                        <span class="badge
                                                @(order.Status == OrderStatusEnums.Pending ? "badge-warning" :
                                                                                                order.Status == OrderStatusEnums.Shipping ? "badge-info" :
                                                                                                order.Status == OrderStatusEnums.Delivered ? "badge-success" :
                                                                                                "badge-danger")">
                                            @order.Status
                                        </span>
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@order.Id"
                                           class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i> Details
                                        </a>
                                    </td>
                                </tr>
                                                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#ordersTable').DataTable({
                "responsive": true,
                "lengthChange": false,
                "autoWidth": false,
                "order": [[2, "desc"]]
            });
        });
    </script>
}