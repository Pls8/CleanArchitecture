@using DAL.ODS.Models.Order
@* Areas/Admin/Views/Orders/Details.cshtml *@
@model OrderClass
@{
    ViewData["Title"] = "Order Details";
    Layout = "_AdminLayout";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Order Details #@Model.Id</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Order Information</h3>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">Order ID:</dt>
                            <dd class="col-sm-8">#@Model.Id</dd>

                            <dt class="col-sm-4">Customer:</dt>
                            <dd class="col-sm-8">
                                @if (Model.AppUser != null)
                                {
                                    @Model.AppUser.FirstName @Model.AppUser.LastName
                                    <br />
                                
                                    <small>@Model.AppUser.Email</small>
                                }
                                else
                                {
                                    <span class="text-muted">Customer information not available</span>
                                }
                            </dd>

                            <dt class="col-sm-4">Order Date:</dt>
                            <dd class="col-sm-8">@Model.OrderDate.ToString("dd MMM yyyy HH:mm")</dd>

                            <dt class="col-sm-4">Status:</dt>
                            <dd class="col-sm-8">
                                <span class="badge
                                    @(Model.Status == OrderStatusEnums.Pending ? "badge-warning" :
                                                                            Model.Status == OrderStatusEnums.Shipping ? "badge-info" :
                                                                            Model.Status == OrderStatusEnums.Delivered ? "badge-success" :
                                                                            "badge-danger")">
                                    @Model.Status
                                </span>
                            </dd>

                            <dt class="col-sm-4">Phone:</dt>
                            <dd class="col-sm-8">@Model.PhoneNumber</dd>
                        </dl>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-header">
                        <h3 class="card-title">Shipping Information</h3>
                    </div>
                    <div class="card-body">
                        <p><strong>Address:</strong> @Model.ShippingAddress</p>
                        <p><strong>City:</strong> @Model.City</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Order Items</h3>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Qty</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>@item.UnitPrice.ToString("C")</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.TotalPrice.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                <p class="mb-1">Subtotal:</p>
                                <p class="mb-1">Shipping:</p>
                                <p class="mb-1">Discount:</p>
                                <p class="mb-1"><strong>Total:</strong></p>
                            </div>
                            <div class="col-6 text-right">
                                <p class="mb-1">@Model.SubTotal.ToString("C")</p>
                                <p class="mb-1">@Model.Discount.ToString("C")</p>
                                <p class="mb-1"><strong>@Model.TotalAmount.ToString("C")</strong></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-12">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Orders
                </a>
            </div>
        </div>
    </div>
</section>